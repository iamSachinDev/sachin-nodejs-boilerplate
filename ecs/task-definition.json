{
  "family": "myProject-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::<your-account-id>:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "myProject",
      "image": "<your-account-id>.dkr.ecr.ap-south-1.amazonaws.com/myProject:latest",
      "essential": true,
      "portMappings": [{ "containerPort": 7777, "hostPort": 7777 }],
      "environment": [
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "7777" },
        { "name": "MONGO_URI", "value": "mongodb://mongo:27017/myProject" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/myProject",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
